<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Scene fx:id="scene" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ForgotController">
    <Pane fx:id="pane" prefHeight="180.0" prefWidth="300.0">
      <children>
         <TextField fx:id="email" layoutX="38.0" layoutY="24.0" prefHeight="30.0" prefWidth="230.0" promptText="Email">
            <font>
               <Font size="16.0" />
            </font></TextField>
         <PasswordField fx:id="password" layoutX="38.0" layoutY="70.0" prefHeight="36.0" prefWidth="230.0" promptText="New Password">
            <font>
               <Font size="16.0" />
            </font></PasswordField>
         <Button fx:id="ChangeButton" layoutX="38.0" layoutY="122.0" mnemonicParsing="false" onAction="#ChangeClicked" text="Change Password" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Button>
         <Button fx:id="ExitButton" layoutX="188.0" layoutY="122.0" mnemonicParsing="false" onAction="#Exit" prefHeight="30.0" prefWidth="80.0" text="Exit">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Button>
      </children></Pane>
</Scene>
